// Place your key bindings in this file to overwrite the defaults
[
    {
        "key": "ctrl+=",
        "command": "editor.action.formatDocument",
    },
    // See invisible characters
    {
        "key": "ctrl+shift+i",
        "command": "editor.action.toggleRenderWhitespace"
    },
    // Toggle minimap
    {
        "key": "ctrl+shift+m",
        "command": "editor.action.toggleMinimap",
        "when": "editorTextFocus'",
    },
    // Split panes
    {
        "key": "ctrl+-",
        "command": "workbench.action.splitEditorDown",
    },
    {
        "key": "ctrl+shift+\\",
        "command": "workbench.action.splitEditorRight",
    },
    // Move between groups like a sane vim person
    {
        "key": "ctrl+l",
        "command": "workbench.action.focusRightGroupWithoutWrap"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.focusLeftGroupWithoutWrap"
    },
    // {
    //     "key": "ctrl+j",
    //     "command": "workbench.action.focusBelowGroup"
    // },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusAboveGroup"
    },
    // Move to next/prev tab, quickly
    {
        "key": "ctrl+alt+l",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+alt+h",
        "command": "workbench.action.previousEditor"
    },
    // Move pane inside group
    {
        "key": "shift+ctrl+l",
        "command": "workbench.action.moveEditorRightInGroup"
    },
    {
        "key": "shift+ctrl+h",
        "command": "workbench.action.moveEditorLeftInGroup"
    },
    // Move current pane to a different group, so efficiently
    {
        "key": "shift+cmd+l",
        "command": "workbench.action.moveEditorToRightGroup"
    },
    {
        "key": "shift+cmd+h",
        "command": "workbench.action.moveEditorToLeftGroup"
    },
    // Move whole group, radically
    {
        "key": "ctrl+shift+cmd+l",
        "command": "workbench.action.moveActiveEditorGroupRight"
    },
    {
        "key": "ctrl+shift+cmd+h",
        "command": "workbench.action.moveActiveEditorGroupLeft"
    },
    // Move focus in and out of the terminal
    {
        "key": "ctrl+j",
        "command": "workbench.action.terminal.focus",
        //"when": "activeEditorGroupLast || activeEditorGroupIndex == 2"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus",
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus",
    },
    {
        "key": "cmd+i",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    {
        "key": "ctrl+shift+l",
        "command": "workbench.action.terminal.split",
        "when": "terminalFocus",
    },
    {
        "key": "ctrl+shift+h",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus",
    },
    // Resize windows
    {
        "key": "alt+j",
        "command": "workbench.action.increaseViewHeight",
    },
    {
        "key": "alt+k",
        "command": "workbench.action.decreaseViewHeight",
    },
    {
        "key": "alt+h",
        "command": "workbench.action.decreaseViewWidth",
        "when": "!activeEditorGroupLast"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.increaseViewWidth",
        "when": "!activeEditorGroupLast"
    },
    {
        "key": "alt+h",
        "command": "workbench.action.decreaseViewWidth",
        "when": "activeEditorGroupLast"
    },
    {
        "key": "alt+l",
        "command": "workbench.action.increaseViewWidth",
        "when": "activeEditorGroupLast"
    },
    // {
    //     "key": "\\ f",
    //     "command": "extension.ripgrep"
    // },
    // Folding/unfolding
    // {
    //     "key": "space",
    //     "command": "editor.fold",
    //     "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
    // },
    // {
    //     "key": "ctrl+space",
    //     "command": "editor.unfold",
    //     "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
    // },
    // ------------------ Removed shortcuts -----------------------------
]